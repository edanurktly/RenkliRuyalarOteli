@model List<Musteri>

    <a asp-action="Create" asp-controller="Musteri" class="btn btn-primary"> Yeni Kayit </a>
    <div class="card">
        <div class="card-header">
            <h3>Müsteriler</h3>
        </div>
        <div class="card-body">
        <table class="table table-hover">   
            <thead>
                <tr>
                    <td> Adi </td>
                    <td> Soyadi </td>
                    <td> Cinsiyet </td>                                          
                    <td> Müsteri TcNo </td>
                    <td> CepNo </td>
            </tr>
            </thead>
            <tbody>
                @foreach (Musteri Musteri in Model)
                {
                    <tr>                    
                        <td>@Musteri.Ad</td>
                        <td>@Musteri.Soyadi</td>
                        <td>@Musteri.Cinsiyet</td>
                        <td>@Musteri.MusteriTcNo</td>
                        <td> @Musteri.CepNo</td>
                         <td><a asp-action="Update" asp-controller="Musteri" class="btn btn-success" asp-route-Id="@Musteri.Id">Update</a> </td>
                        <td><a asp-action="Delete" asp-controller="Musteri" class="btn btn-danger" asp-route-Id="@Musteri.Id">Delete</a> </td>
                    </tr>
                    
                }
            </tbody>
        </table>
        </div>
    </div>
