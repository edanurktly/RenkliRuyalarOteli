@model OdaCreateDTO
<div class="card">
    <div class="card-header">
        <h3> Yeni Oda </h3>
        <div class="card-header">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        </div>
    </div>
     <div class="card-body">
        <form asp-action="Create" asp-controller="Kull" method="post" enctype="multipart/form-data">

            <div class="input-group mb-3">
                <input type="OdaNo" asp-for="OdaNo" class="form-control" placeholder="OdaNo">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope text-danger" asp-validation-for="OdaNo"></span>
                    </div>
                </div>
            </div>

            <div class="input-group mb-3">
                <input type="Kisi Sayisi" asp-for="KisiSayisi" class="form-control" placeholder="Kisi Sayisi">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope text-danger" asp-validation-for="KisiSayisi"></span>
                    </div>
                </div>
            </div>

            <div class="input-group mb-3">
            <input type="Durum" asp-for="Durum" class="form-control" placeholder="Durum">
                    <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope text-danger" asp-validation-for="Durum"></span>
                    </div>
                </div>
            </div>
            </form>
</div>
@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/jquery.multi-select.min.js"></script>
    }